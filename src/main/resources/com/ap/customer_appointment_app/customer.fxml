<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0"
      prefWidth="550.0" spacing="25.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ap.customer_appointment_app.controllers.CustomerController">
   <padding>
      <Insets left="75.0" top="50.0" />
   </padding>
   <Label fx:id="customerLabel" text="Add Customer">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="25.0" />
      </VBox.margin>
   </Label>
   <HBox>
      <Label prefWidth="150.0" text="Name:">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="nameText" prefWidth="250.0" promptText="Customer's full name" style="-fx-background-radius: 7;">
         <font>
            <Font size="14.0" />
         </font>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </TextField>
   </HBox>
   <HBox>
      <Label prefWidth="150.0" text="Address:">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="addressText" prefWidth="250.0" promptText="Customer's address" style="-fx-background-radius: 7;">
         <font>
            <Font size="14.0" />
         </font>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </TextField>
   </HBox>
   <HBox>
      <Label prefWidth="150.0" text="Postal Code:">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="postCodeText" prefWidth="250.0" promptText="Customer's postal code" style="-fx-background-radius: 7;">
         <font>
            <Font size="14.0" />
         </font>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </TextField>
   </HBox>
   <HBox>
      <Label prefWidth="150.0" text="Phone Number:">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="phoneText" prefWidth="250.0" promptText="Customer's phone number" style="-fx-background-radius: 7;">
         <font>
            <Font size="14.0" />
         </font>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </TextField>
   </HBox>
   <HBox>
      <Label prefWidth="150.0" text="Country:">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="countryComboBox" onAction="#countrySelection" prefWidth="250.0" promptText="Select country" />
   </HBox>
   <HBox>
      <Label prefWidth="150.0" text="Division:">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="divisionComboBox" prefWidth="250.0" promptText="Select division" />
   </HBox>
   <HBox spacing="50.0">
      <VBox.margin>
         <Insets left="150.0" top="25.0" />
      </VBox.margin>
      <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonAction" prefWidth="100.0" style="-fx-background-radius: 7;" text="Cancel">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonAction" prefWidth="100.0" style="-fx-background-radius: 7;" text="Save">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </HBox>
   <Label fx:id="notificationLabel" textFill="RED">
      <VBox.margin>
         <Insets top="25.0" />
      </VBox.margin>
      <font>
         <Font size="14.0" />
      </font>
   </Label>
</VBox>
